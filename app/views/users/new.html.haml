%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, html: {class: "form-horizonal"}) do |f|
        %header
          %h1 Register
        %fieldset
          = hidden_field_tag :invitation_token, @invitation.token unless @invitation.blank?
          = hidden_field_tag :amount, 2000
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.text_field :full_name, label: "Full Name"
        %fieldset.actions.control-group
          .controls
            %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['STRIPE_PUBLISHABLE_KEY']}" data-name="Rick Myflix Demo" data-description="Rickflix membership ($9.99)" data-amount="999" data-currency="usd")
