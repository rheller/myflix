%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], html: {class: "form-horizontal"}  do |f|
          %ul.nav.nav-tabs
            %li
              = link_to "Recent Payments", admin_payments_path
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            
            = f.text_field :title, label: "Title", class: "span3"
            = f.select :category_id, options_for_select(Category.all.map{|c| [c.name, c.id]}), label: "Category", class: "span3"
            = f.text_area :description, label: "Description", rows: 8, class: "span6"
            = f.file_field :large_cover, class: "btn btn-file"
            = f.file_field :small_cover, class: "btn btn-file"
            = f.text_field :video_url, label: 'Video URL',  class: "span3"

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
